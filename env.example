# ===========================================
# Pixis AI - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED: Google Gemini API
# ===========================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL: Application Settings
# ===========================================
# App name displayed in the UI
NEXT_PUBLIC_APP_NAME=Pixis AI

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Maximum file upload size in MB (default: 10)
MAX_FILE_SIZE_MB=10

# ===========================================
# OPTIONAL: AI Model Configuration
# ===========================================
# Gemini model to use (default: gemini-2.0-flash)
# Options: gemini-2.0-flash, gemini-1.5-pro-latest, gemini-1.5-flash-latest
GEMINI_MODEL=gemini-2.0-flash

# Temperature for AI responses (0.0 - 1.0, default: 0.7)
AI_TEMPERATURE=0.7

# Maximum output tokens (default: 8192)
AI_MAX_TOKENS=8192
